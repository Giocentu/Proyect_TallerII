                   FontSize="20" 
                   HorizontalAlignment="Center" 
                   FontWeight="Bold"/>

        <TextBox Name="txtUser" Watermark="Ingrese DNI (Usuario)"/>
        <TextBox Name="txtPass" Watermark="ContraseÃ±a" PasswordChar="*"/>

        <Button Name="btnLogin" 
                Content="Ingresar" 
                HorizontalAlignment="Stretch" 
                HorizontalContentAlignment="Center" 
                Click="BtnLogin_Click"/>
        
        <TextBlock Name="lblStatus" 
                   HorizontalAlignment="Center" 
                   FontWeight="Bold"/>
    </StackPanel>

</Window>